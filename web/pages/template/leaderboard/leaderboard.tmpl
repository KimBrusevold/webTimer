{{ template "header" }}
<main id="results-page">
  <h1>Resultater</h1>
  <div class="button-row">
    <button aria-selected="false" class="selected">I dag</button>
    <button aria-selected="false">Denne måneden</button>
    <button aria-selected="false">Forrige måned</button>
    <button aria-selected="false">I år</button>
    <button aria-selected="false">All Time</button>
  </div>
  <div class="card">
    <h2 class="card-title">Raskest</h2>
    <div hx-get="/leaderboard/raskest?filter=idag" hx-trigger="load">
       <div class="loader htmx-indicator"></div> 
    </div>
    
  </div>


  <div class="button-row" style="margin-top: 20px">
    <button aria-selected="true" class="selected">I dag</button>
    <button aria-selected="false">Denne måneden</button>
    <button aria-selected="false">Forrige måned</button>
    <button aria-selected="false">I år</button>
    <button aria-selected="false">All Time</button>
  </div>
  <div class="card">
    <h2 class="card-title">Flest</h2>
    <table class="leaderboard-table">
      <thead>
        <tr>
          <th class="text-left">Nr.</th>
          <th class="text-left">Brukernavn</th>
          <th class="text-right">Antall</th>
        </tr>
      </thead>
      <tbody>
        {{ range .countData }}
        <tr>
          <td class="text-left">{{ .Place }}</td>
          <td class="text-left">{{ .Username }}</td>
          <td class="text-right">{{ .Count }}</td>
        </tr>
        {{ end }}
      </tbody>
    </table>
  </div>
</main>
{{ template "footer" }}