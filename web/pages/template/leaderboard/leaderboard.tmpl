{{ template "header" }}
<main id="results-page">
  <h1>Resultater</h1>
  <div class="button-row">
    <button aria-selected="true" class="selected">I dag</button>
    <button aria-selected="false">Denne måneden</button>
    <button aria-selected="false">Forrige måned</button>
    <button aria-selected="false">I år</button>
    <button aria-selected="false">All Time</button>
  </div>
  <div class="card">
    <h2 class="card-title">Raskest</h2>
    <table class="leaderboard-table">
      <thead>
        <tr>
          <th class="text-left">Nr.</th>
          <th class="text-left">Brukernavn</th>
          <th class="text-right">Tid</th>
        </tr>
      </thead>
      <tbody>
        {{ range .timingData }}
        <tr>
          <td class="align-center">{{ .Place }}</td>
          <td class="align-center username">{{ .Username }}</td>
          <td id="tid" class="align-center">{{ .Minutes }}:{{ .Seconds }}.{{ .Tenths }}</td>
        </tr>
        {{ end }}
      </tbody>
    </table>
  </div>

  <table class="main-container">
    <thead>
      <tr>
        <th>Nr.</th>
        <th>Brukernavn</th>
        <th>Antall</th>
      </tr>
    </thead>
    <tbody id="times-rows">
      {{ range .countData }}
      <tr>
        <td class="align-center">{{ .Place }}</td>
        <td class="align-center username">{{ .Username }}</td>
        <td class="align-center">{{ .Count }}</td>
      </tr>
      {{ end }}
    </tbody>
  </table>
</main>
{{ template "footer" }}